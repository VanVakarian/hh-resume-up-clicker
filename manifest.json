{
  "manifest_version": 3,
  "name": "HH Resume Auto Clicker",
  "version": "1.1.0",
  "description": "Automatic resume boost button clicking on hh.kz/hh.ru with smart reload scheduling",
  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "*://*.hh.kz/*",
    "*://*.hh.ru/*"
  ],
  "icons": {
    "16": "icon128.png",
    "48": "icon128.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png",
    "default_title": "HH Auto Clicker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.hh.kz/*",
        "*://*.hh.ru/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
